<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>

	<properties resource="channel/db_lyj/db.properties"></properties>
	
	<typeAliases>
		<typeAlias type="channel.member.dto.MemberDto" alias="memberDto"/>
		<typeAlias type="channel.lyj_room.ChannelDto" alias="channelDto"/>
		<typeAlias type="channel.lyj_room.ChannelMemberDto" alias="channelMemberDto"/>
		<typeAlias type="channel.lyj_room.WorkSpaceDto" alias="workSpaceDto"/>
		<typeAlias type="channel.lyj_room.WorkSpaceMemberDto" alias="workSpaceMemberDto"/>
		<typeAlias type="channel.lyj_chat.ChatDto" alias="chatDto"/>
		<typeAlias type="channel.lyj_chat.MessageDto" alias="messageDto"/>
		<typeAlias type="channel.lyj_chat.MessageRoomDto" alias="messageRoomDto"/>
	</typeAliases>
		
  	<environments default="development">
    	<environment id="development">
      	<transactionManager type="JDBC"/>
	      	<dataSource type="POOLED">
	        	<property name="driver" value="${driver}"/>
	        	<property name="url" value="${url}"/>
	        	<property name="username" value="${username}"/>
	        	<property name="password" value="${password}"/>
	      	</dataSource>
    	</environment>
  	</environments>

	<mappers>
		<mapper resource="channel/db_lyj/channel-mapper-channel.xml"/>
		<mapper resource="channel/db_lyj/channel-mapper-chat.xml"/>
	</mappers>


</configuration>
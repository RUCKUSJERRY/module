<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="channelmapper-chat">
	
	<resultMap type="chatDto" id="chatMap">
		<result property="chat_seq" column="CHAT_SEQ"/>
		<result property="channel_seq" column="CHANNEL_SEQ"/>
		<result property="member_id" column="MEMBER_ID"/>
		<result property="member_name" column="MEMBER_NAME"/>
		<result property="chat_content" column="CHAT_CONTENT"/>
		<result property="chat_regdate" column="CHAT_REGDATE"/>	
	</resultMap>
	
	<resultMap type="messageDto" id="messageMap">
		<result property="message_seq" column="MESSAGE_SEQ"/>
		<result property="messageroom_seq" column="MESSAGEROOM_SEQ"/>
		<result property="to_id" column="TO_ID"/>
		<result property="to_name" column="TO_NAME"/>
		<result property="from_id" column="FROM_ID"/>
		<result property="from_name" column="FROM_NAME"/>
		<result property="message_content" column="MESSAGE_CONTENT"/>
		<result property="message_regdate" column="MESSAGE_REGDATE"/>	
	</resultMap>
	
	<resultMap type="messageRoomDto" id="messageRoomMap">
		<result property="messageroom_seq" column="MESSAGEROOM_SEQ"/>
		<result property="workspace_seq" column="WORKSPACE_SEQ"/>
		<result property="member_id" column="MEMBER_ID"/>
		<result property="member_name" column="MEMBER_NAME"/>
		<result property="member2_id" column="MEMBER2_ID"/>
		<result property="member2_name" column="MEMBER2_NAME"/>
		<result property="messageroom_regdate" column="MESSAGEROOM_REGDATE"/>	
	</resultMap>

	<select id="callChatList" parameterType="int" resultMap="chatMap">
		SELECT CHAT_SEQ, CHANNEL_SEQ, MEMBER_ID, MEMBER_NAME, CHAT_CONTENT, CHAT_REGDATE
		FROM CHAT
		WHERE CHANNEL_SEQ = #{channel_seq}
		ORDER BY CHAT_REGDATE
	</select>
	
	<insert id="chatInsert" parameterType="chatDto">
		INSERT INTO CHAT
		VALUES (CHATSEQ.NEXTVAL,
		#{channel_seq},
		#{member_id},
		#{member_name},
		#{chat_content}, 
		SYSDATE)
	</insert>
	
	<select id="messageRoomList" parameterType="MessageRoomDto" resultMap="messageRoomMap">
		SELECT MESSAGEROOM_SEQ, WORKSPACE_SEQ, MEMBER_ID, MEMBER_NAME, MEMBER2_ID, MEMBER2_NAME, MESSAGEROOM_REGDATE
		FROM MESSAGEROOM
		WHERE WORKSPACE_SEQ = #{workspace_seq}
		AND (MEMBER_ID = #{member_id} OR MEMBER2_ID = #{member_id})
	</select>
	
	<select id="callMessageList" parameterType="int" resultMap="messageMap">
		SELECT MESSAGE_SEQ, MESSAGEROOM_SEQ, TO_ID, TO_NAME, FROM_ID, FROM_NAME, MESSAGE_CONTENT, MESSAGE_REGDATE
		FROM MESSAGE
		WHERE MESSAGEROOM_SEQ = #{messageroom_seq}
	</select>
	
	<select id="msgRoomSelect" parameterType="int" resultType="messageRoomDto">
		SELECT MESSAGEROOM_SEQ, WORKSPACE_SEQ, MEMBER_ID, MEMBER_NAME, MEMBER2_ID, MEMBER2_NAME, MESSAGEROOM_REGDATE
		FROM MESSAGEROOM
		WHERE MESSAGEROOM_SEQ = #{messageroom_seq}
	</select>
	
	<insert id="messageInsert" parameterType="messageDto">
		INSERT INTO MESSAGE
		VALUES (MESSAGESEQ.NEXTVAL, #{messageroom_seq}, #{to_id}, #{to_name}, #{from_id}, #{from_name}, #{message_content}, SYSDATE)
	</insert>
	
	

</mapper>